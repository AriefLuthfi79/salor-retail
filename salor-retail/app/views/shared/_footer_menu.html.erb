        <%= t "menu.item_types" %>
      </a>
    </div>
  </li>
  -->
  <% if salor_user.can(:index_shipments) %>
  <li>
    <div align="center">
      <a href="<%= shipments_path %>">
        <img src="/images/icons/<%= icon(:shipment,32) %>" /><br />
      </a>
    </div>
  </li>
  <% end %>
  
  <% if salor_user.can(:index_orders) %>
  <li>
    <div align="center">
      <%= link_to salor_icon(:order,{},32), new_order_path %><br />
    </div>
  </li>
  <% end %>
  <% if salor_user.can(:new_customers) %>
  <li>
    <div align="center">
      <%= link_to salor_icon(:customer,{},32), new_customer_path(:vendor_id => salor_user.meta.vendor_id) %><br />
    </div>
  </li>
  <% end %>
  <li>
    <div align="center">
      <a href="/vendors/end_day">
        <img src="/images/icons/<%= icon(:logout,32) %>" /><br />
      </a>
    </div>
  </li>
  <li>
    <span class="version">v<%= AppConfig.version %></span>
  </li>
