<div class="list">
      <% if salor_user.can(:show_tax_profiles) %>
        <div class="widget master" onmousedown="window.location = '<%= tax_profiles_path(:vendor_id => @vendor.id) %>';">
          <div align="center">
            <a href="<%= tax_profiles_path(:vendor_id => @vendor.id) %>">
              <img src="/images/icons/<%= icon(:tax_profile,64) %>" /><br />
              <%= t("menu.tax_profiles") %>
            </a>
          </div>
        </div>
        <% end %>

  <% GlobalData.vendors.each do |store| %>
    <div class="widget master-wide" >
      <div align="center">
        <a href="/vendors/<%= store.id %>">
          <img src="/images/icons/<%= icon(:vendor) %>" onmousedown="window.location = '/vendors/<%= store.id %>';"/><br />
          <%= store.name %>
      	</a>
      	<br /> <br />
      	
      <%= salor_render :partial => "shared/edit_delete_buttons", :locals => {:edit_link => edit_vendor_path(store), :delete_link => vendors_path(store, :method => :delete) } %>
          <!-- End ul.list -->
      </div>
    </div>
  <% end %>
  <div class="widget master">
      <div align="center">
        <a href="<%= new_vendor_path %>">
          <img src="/images/icons/<%= icon(:add) %>" /><br />
          <%= t "menu.new_vendor" %>
      	</a>
      </div>
    </div>
</div>
