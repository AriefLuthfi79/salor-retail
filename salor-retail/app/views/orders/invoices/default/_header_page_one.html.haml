.header-page-one
  
  .clear
  
  .company_data.floatright= raw Kramdown::Document.new(@invoice_blurb_header).to_html
  
  .customer_data.floatleft
    - if @report[:customer]
      = @report[:customer][:company_name]
      %br
      == #{ @report[:customer][:first_name] } #{ @report[:customer][:last_name] }
      %br
      = @report[:customer][:street1]
      %br
      = @report[:customer][:street2]
      %br
      == #{ @report[:customer][:postalcode]} #{ @report[:customer][:city] } #{ @report[:customer][:country] }
      /%br
      /== #{ t('printr.order_receipt.current_loyalty_points') }: #{ @report[:customer][:current_loyalty_points] }
      
  .clear