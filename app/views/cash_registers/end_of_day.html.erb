<div class="clear">
<br />
</div>
<div class="button-row" align='right'>
          <div class='button-print rounded-corners-left' onmousedown="print_url(Register.thermal_printer,'/vendors/render_end_of_day_receipt','');"><%= t('.end_of_day_thermal_report')%></div>
          <div class='button-print' onmousedown="window.location.href='/orders/report_day';"><%= t('.paper_report')%></div>
          <div class="spacer">&nbsp;</div>
          <div class="button-confirm rounded-corners-right" onmousedown="logout();"><%= I18n.t("system.logout") %></div>
</div>

<br/>
<div  align="center" width="100%">

      <div id="eod-drawer-total"><span class='eod-drawer-total'><%= t '.cash_drawer' %>: <%= number_to_currency $User.get_drawer.reload.amount %></span></div>
          

</div>

<br/>
<br/>


<div align="center">
      <% I18n.t("number.currency.format.pieces").split(',').each do |piece| %>
        <div class="eod-piece">
      
              <label class="eod-calculator-input-label"><%= raw leftpad(piece.to_s.gsub('0.','.'),3,'&nbsp;') %></label>
       
              <input id="eod_piece_<%= num2name(piece) %>"
                 type="text"
                 name="eod_piece_<%= num2name(piece) %>"
                 class="text-input eod-calculator-input"
                 value=""
                 amount="<%= piece %>" />
        </div> 
      <% end %>
</div>

<br/>
<br/>
<br/>


<div class="button-row" align="center">
      <div id="eod-calculator-total"><%= t '.counted' %>: <span class='eod-calculator-total'><%= SalorBase.number_to_currency(0) %></span></div>
      <div id="eod-calculator-difference"><%= t '.difference' %>: <span class='eod-calculator-difference'><%= SalorBase.number_to_currency(0) %></span></div>
</div>
<br />
<br />
<br />
<div class="button-row" align="center">
<%= I18n.t("views.notice.please_backup") %>
      <select name="usb_device" id="usb_device">
      <option value="<%= Dir['/home/*'].first %>/Documents">Documents</option>
        <% Dir.entries("/media").each do |d| %>
        
          <% next  if d == '.' or d == '..'%>
          <option value="/media/<%= d %>"><%= d %></option>
        <% end %>
      </select>
      <div class="button-confirm rounded-corners-all" onmousedown="$.get('/vendors/backup?path='+$('#usb_device').val())"><%= t 'menu.backup' %></div>
</div>

