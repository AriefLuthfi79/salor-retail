%h2= @country.new_record? ? (t 'menu.new_country') : (t 'menu.edit_country')

- if @country.errors.any?
  .errors
    %h3= t 'activerecord.errors.template.header', :count => @country.errors.size, :model => Country.model_name.human
    %ul
      - @country.errors.full_messages.each do |msg|
        %li= msg

.form_fields
  = form_for @country do |sale_type_form|
    
    %table
      %tr
        %td= sale_type_form.label t('activerecord.attributes.name')
        %td= sale_type_form.text_field :name, :size => '10'
      %tr
        %td{:colspan=> 2,:align=>'right'}
          %p= submit_tag( controller.action_name == 'new' ? (t('helpers.submit.create')) : (t('helpers.submit.edit')) )
