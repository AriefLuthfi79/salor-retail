<% if @categories then %><%
  header = [ :class,:sku,:name,:tag,:button_category,:position,:color]
%>#HEADERS;<%= header.join(";") %><% 
@categories.each do |item| 
  line = []
  header.each do |h|
    line << item.send(h)
  end
%>
