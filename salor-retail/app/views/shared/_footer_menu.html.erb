        <img src="/images/icons/<%= icon(:home,32) %>" /><br />
      </a>
    </div>
  </li>
  <% if salor_user.can(:show_tax_profiles) %>
  <li>
    <div align="center">
      <a href="<%= tax_profiles_path %>">
        <img src="/images/icons/<%= icon(:tax_profile,32) %>" /><br />
      </a>
    </div>
  </li>
  <% end %>
  <li>
    <div align="center">
      <a href="<%= vendors_path %>">
        <img src="/images/icons/<%= icon(:vendor,32) %>" /><br />
      </a>
    </div>
  </li>
  <% if salor_user.can(:cashier) %>
    <li>
      <div align="center">
        <%= salor_icon(:cash_drop,{:onclick => 'show_cash_drop();'},32) %><br />
      </div>
    </li>
  <% end %>
  <!-- 
  <li>
    <div align="center">
