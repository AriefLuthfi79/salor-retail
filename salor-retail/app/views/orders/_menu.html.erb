<script type="text/javascript">
function showHideCustomerOrRebate() {
  if ($('.pos-customer').hasClass('shown')) {
    $('.pos-customer').removeClass('shown');
    $('.pos-customer').hide();
    $('.rebate').addClass('shown');
    $('.rebate').show();
  } else {
    $('.rebate').removeClass('shown');
    $('.rebate').hide();
    $('.pos-customer').addClass('shown');
    $('.pos-customer').show();
  }
}
function clearOrder() {
  $.get('/orders/clear?order_id=' + Order.id);
}

function clickBuyOrderButton(id) {
  get('/vendors/toggle?ajax=true&klass=Order&field=toggle_buy_order&model_id=' + id, 'pos/menu');
  //focusInput($('.void-order-input'));
}
</script>
