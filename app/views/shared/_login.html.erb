<div align="center">
  <script type="text/javascript">
  $(document).ready(function () {
      $('.employee-sign-in-form-container').show();
      $('#employee').find(".keyboardable:first").focus();
      $('.link').mousedown(function () {
          $('.active').removeClass('active');
          $(this).addClass('active');
          $('.sign-in-form-container').hide();
          $($(this).attr('href')).show();
          
      }).mouseup(function () {
        $($(this).attr('href')).find(".keyboardable:first").focus();
      });
      $(window).keypress(function(event){
        if (event.keyCode == 13) {
          doSubmit();
        }
      });
  });
  
  function doSubmit() {
      $('#new_employee').submit();
  }
  </script>
  <% if AppConfig.logo_check  %>
    <div class="customer-logo">
      <img src="/images/logo-300.png"  />
    </div>
  <% end %>
  <div class="sign-in-forms">
    <div class="tab-container">
  <img src='/images/salor-logo-reports.png'>


                <%= form_for(Employee.new, :url => '/employees/login') do |f| %>
                  <br />
                  <br />
                  <%= text_field_tag :code, "", :class => "keyboardable big-input"%></p>
                  <br />
                  <div class="button-row" align="center">
                      <div class="spacer">&nbsp;</div>
                      <div class="button-confirm" onmousedown="doSubmit()"><%= I18n.t("system.login") %></div>
                  </div>
                  <br />
                <% end %>  
    </div>
  </div>
</div>
