<% if @status_ssh.empty? and @status_vpn.empty? %>
  $('#connection_status').fadeOut(function(){
    $('#connection_status').css('background', '#CC5757');
    $('#connection_status').html('<%= escape_javascript t('.disconnected') %>');
    $('#connection_status').fadeIn();
  });

<% elsif not @status_ssh.empty? and @status_vpn.empty? %>
  $('#connection_status').fadeOut(function(){
    $('#connection_status').css('background', '#3c8522');
    $('#connection_status').fadeIn();
    $('#connection_status').html('<%= escape_javascript t('.connected') %>');
  });

<% elsif @status_ssh.empty? and not @status_vpn.empty?%>
  $('#connection_status').fadeOut(function(){
    $('#connection_status').css('background', '#418dc8');
    $('#connection_status').fadeIn();
    $('#connection_status').html('<%= escape_javascript t('.connected') %>');
  });

<% elsif not @status_ssh.empty? and not @status_vpn.empty?%>
  $('#connection_status').fadeOut(function(){
    $('#connection_status').css('background', '#F6AF47');
    $('#connection_status').fadeIn();
    $('#connection_status').html('<%= escape_javascript t('.connected') %>');
  });


<% end %>
$('img#progress').hide();
