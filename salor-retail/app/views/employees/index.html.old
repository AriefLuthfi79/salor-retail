=raw content_box_top(I18n.t("menu.users"))
%table{:width => '90%',:align => 'center'}
  %tr
    %td{:colspan=>4}
      %div{:class => "tool-icon"}
        = link_to salor_icon(:add,{},32),new_user_path(:vendor_id => @current_vendor.id)
        %br
        %span= I18n.t('views.single_words.new')
  - @users.each do |user|
    %tr
      %td{:align => 'right',:width => '20%', :class => 'raised-element table-column rounded-corners-left'}= link_to user.username, user_path(user)
      %td{:class => 'raised-element table-column rounded-corners-right', :width => '44440%'}= user.role_cache[0,55]
      %td{:width => '10%'}= button_to t('menu.edit'),{:action => :edit, :id => user.id}, :method => :get
      %td{:width => '10%'}= button_to(t('menu.destroy'),user, :method => :delete, :class => 'warning')
