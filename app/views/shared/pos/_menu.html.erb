<script type="text/javascript">
function showHideCustomerOrRebate() {
  if ($('.pos-customer').hasClass('shown')) {
    $('.pos-customer').removeClass('shown');
    $('.pos-customer').hide();
    $('.rebate').addClass('shown');
    $('.rebate').show();
  } else {
    $('.rebate').removeClass('shown');
    $('.rebate').hide();
    $('.pos-customer').addClass('shown');
    $('.pos-customer').show();
  }
}
function clearOrder() {
  $('#main_content').mask('<%= t("views.single_words.saving") %>');
  $.get('/orders/clear?order_id=' + $('.order-id').html());
}

function setBuyOrderButton(id) {
  $("#buy_order_button").unbind('mousedown');
  $("#buy_order_button").mousedown(function(){
    get('/vendors/toggle?ajax=true&klass=Order&field=toggle_buy_order&model_id=' + id, 'pos/menu');
    focusInput($('.void-order-input'));
  });
}
</script>
