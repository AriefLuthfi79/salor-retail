<%= raw content_box_top(I18n.t("headings.shipments")) %>

      <% if salor_user.can(:index_shippers) %>
        <table width="375px" align="center">
          <tr valign="top">
            <td align="center" width="125px">
              <%= link_to(image_tag("/images/icons/" + icon(:add,32)), new_shipment_path) %>
            </td>
            <td align="center" width="125px">
              <a class='shippers_index' href="<%= shippers_path %>">
                <img src="/images/icons/<%= icon(:shipper,32) %>" /><br />
                <%= t "menu.shippers" %>
              </a>
            </td>
            <td align="center" width="125px">
              <a class='shippers_index' href="<%= shipment_types_path %>">
                <img src="/images/icons/<%= icon(:shipment_type,32) %>" /><br />
                <%= t "menu.shipment_types" %>
              </a>
            </td>
          </tr>
        </table>
      <% end %>
      <br />
      <br />
<table class='shipments_index'>
<tr>
<th><%= Shipment.human_attribute_name(:name) %></th>
<th><%= Shipment.human_attribute_name(:from) %></th>
<th><%= Shipment.human_attribute_name(:to) %></th>
<th><%= Shipment.human_attribute_name(:price) %></th>
<th><%= Shipment.human_attribute_name(:paid) %></th>
<th><%= Shipment.human_attribute_name(:status) %></th>
</tr>

   
<% @shipments.reverse.each do |shipment| %>
<%
  if shipment.shipper.nil? then
    sname = I18n.t("system.errors.value_not_set")
  else
    sname = shipment.shipper.name
  end
  if shipment.receiver.nil? then
    rname = I18n.t("system.errors.value_not_set")
  else
    rname = shipment.receiver.name
  end
%>
  <tr>
    <td><%= link_to shipment.name, shipment_path(shipment) %></td>
    <td><%= edit_me(:the_shipper,shipment,sname) %></td>
    <td><%= edit_me(:the_receiver,shipment,rname) %></td>
    <td><%= salor_number_to_currency(shipment.price) %></td>
    <td><%= shipment.paid %></td>
    <td><%= shipment.shipment_type.name if shipment.shipment_type %></td>
    <td><%= link_to image_tag("/images/icons/" + icon(:edit,32)), edit_shipment_path(shipment) %></td>
    <td><%= link_to image_tag("/images/icons/" + icon(:delete,32)), shipment, :confirm => I18n.t("menu.delete_confirm"), :method => :delete %></td>
  </tr>
<% end %>

</table>
<%= raw content_box_bottom %>
<%= salor_render :partial => "shared/in_place_edit" %>
