= javascript_include_tag 'request_service'

= raw content_box_top(t(".title"))

#request_service
  = text_field_tag 'service_connect_host', 'red-e.eu'
  %br
  = text_field_tag 'service_connect_user', 'service'
  %br
  = text_field_tag 'service_connect_password', t('.password')
  %br
  .connect_service_button_container
    .generic-button#connect_service_ssh{ :onclick => 'connect_service("ssh");' }= t('.connect_ssh')
  .connect_service_button_container
    .generic-button#connect_service_vnc{ :onclick => 'connect_service("vnc");' }= t('.connect_vnc')
  #connection_status= t('.requesting_connection_status')
  %br
  %img{ :id => 'progress', :src => '/images/upload.gif' }

:javascript
  var i18n_connected = "#{ escape_javascript t '.connected' }";
  var i18n_disconnected = "#{ escape_javascript t '.disconnected' }";
